---
import Layout from "@layouts/Layout.astro";
import Container from "@components/common/Container.astro";
import BuyAside from "@components/buy/BuyAside.astro";
import BuyMain from "@components/buy/BuyMain.astro";
import HabitualCard from "@assets/icons/buy/HabitualCard";
---

<Layout title="Comprar auto parte">
  <Container>
    <div class="hidden md:flex gap-4 pt-8">
      <h1 class="text-2xl px-2">Carrito de compra</h1>
    </div>
    <main class="flex flex-col lg:flex-row">
      <section class="p-2">
        <BuyMain />
      </section>
      <aside class="sticky top-0 p-2 overflow-y-auto w-full lg:w-1/3">
        <BuyAside />
      </aside>
    </main>

    <div class="flex flex-col gap-4 pt-8 py-8 md:py-0">
      <h1 class="text-2xl px-2">Comprados juntos habitualmente</h1>
      <HabitualCard client:load />
    </div>
  </Container>
</Layout>
