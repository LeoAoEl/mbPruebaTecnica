---
import Layout from "@layouts/Layout.astro";
import Container from "@components/common/Container.astro";
import AsideContent from "@components/car/AsideContent.astro";
import MainContent from "@components/car/MainContent.astro";
import BCrumbs from "@components/car/bCrumbs";
---

<Layout title="Buscador">
  <Container>
    <div class="md:flex flex-col gap-4 pt-8 hidden">
      <h1 class="text-2xl">Bujia Mazda 3 de 2015</h1>
      <p class="text-sm">680,896 resultados</p>
      <div class="mb-8">
        <BCrumbs client:load />
      </div>
    </div>
    <main class="flex md:flex-row flex-col">
      <aside class="lg:sticky lg:top-0 p-2 w-full">
        <AsideContent />
      </aside>
      <section class="flex md:overflow-y-auto p-2">
        <MainContent />
      </section>
    </main>
  </Container>
</Layout>
