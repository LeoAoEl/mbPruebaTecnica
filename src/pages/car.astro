---
import Layout from "@layouts/Layout.astro";
import Container from "@components/common/Container.astro";
import AsideContent from "@components/car/AsideContent.astro";
import MainContent from "@components/car/MainContent.astro";
import BCrumbs from "@components/car/bCrumbs";
---

<Layout title="Buscador">
  <Container>
    <h1>Bujia Mazda 3 de 2015</h1>
    <p>680,896 resultados</p>
    <BCrumbs client:load />
    <main class="flex">
      <aside class="sticky top-0 h-screen min-h-screen p-2">
        <AsideContent />
      </aside>
      <section class="flex-1 overflow-y-auto p-4">
        <MainContent />
      </section>
    </main>
  </Container>
</Layout>
