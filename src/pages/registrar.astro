---
import Layout from "@layouts/Layout.astro";
import RForm from "@components/Registrar/RForm";
---

<Layout title="Crear marca">
  <section class="bg-white">
    <main class="mx-auto px-10 md:px-20 max-w-screen-lg py-20">
      <h1
        class="text-black text-2xl p-2 border-b-large font-redhat border-primary text-center"
      >
        Hola, te pedimos algunos datos para crear una cuenta de marca
      </h1>
      <div class="max-w-screen-sm mx-auto">
        <RForm client:load />
      </div>
    </main>
  </section>
</Layout>
