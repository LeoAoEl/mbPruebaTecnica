---
import menu from "@assets/icons/car/menu2.svg";
import { Image } from "astro:assets";
import DownArrow from "@assets/icons/car/DownArrow.astro";
import Menu from "@assets/icons/car/Menu.astro";
---

<section class="bg-white rounded-md">
  <section
    class="px-4 py-4 flex flex-row justify-between items-center place-content-center"
  >
    <span class="flex flex-row gap-2 text-lg"
      >Ordenar por: Menor precio <DownArrow /></span
    >
    <div class="flex flex-row gap-2">
      <Image src={menu} alt="Menu icon" class={"cursor-pointer"} />
      <Menu />
    </div>
  </section>
</section>
